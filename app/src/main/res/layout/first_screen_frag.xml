<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".activities.first_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy Vacation"
            android:layout_gravity="center"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainProgressBar"
            android:layout_marginTop="10dp"
            style="@android:style/Widget.Holo.ProgressBar"
            android:indeterminate="true"   />

        <EditText
            android:id="@+id/email_editText2"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="50dp"
            android:singleLine="true"
            android:gravity="center"
            android:background="@drawable/edit_text_style"
            android:hint=" Enter email "
            android:autoText="false"
            android:inputType="textWebEmailAddress" />

        <EditText
            android:id="@+id/emailPassword_editText2"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:hint="Enter password"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_style"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/login_button2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_blue_light"
            android:text="Log in"/>



        <Button
            android:id="@+id/forgot_my_pw_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="Forgot my password"/>
        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_green_dark"
            android:text="Sign up"/>


    </LinearLayout>


</LinearLayout>

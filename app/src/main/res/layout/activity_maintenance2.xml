<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maintenance_screen2"
    android:orientation="vertical"
    tools:context=".activities.Maintnance">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="What do you need us to fix ? "
                android:layout_marginTop="10dp"
                android:id="@+id/textView5"
                android:singleLine="true"
                android:textColor="@android:color/background_dark"
                style="@android:style/TextAppearance.DeviceDefault.Large" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Tv "
                        android:id="@+id/textView9"
                        android:textColor="@android:color/primary_text_light" />/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checktv"
                        android:focusable="false"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView9"
                        android:layout_marginStart="109dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Air Conditioner"
                    android:id="@+id/textView10"
                    android:textColor="@android:color/primary_text_light"
                    android:layout_weight="0.93" />
                />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkac"
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Bathroom"
                        android:id="@+id/textView11"
                        android:textColor="@android:color/primary_text_light" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/checkbath"
                        android:focusable="false"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView11"
                        android:layout_marginStart="42dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Room lighting"
                    android:id="@+id/textView12"
                    android:textColor="@android:color/primary_text_light"
                    android:layout_weight="0.95" />

                android:layout_weight="0.23" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkLights"
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_height="122dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Urgency :"
                    android:id="@+id/textView4"
                    android:singleLine="true"
                    android:textColor="@android:color/background_dark"
                    style="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColorHighlight="@android:color/background_dark" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:isScrollContainer="true"
                    android:background="@drawable/edit_text_style"
                    android:id="@+id/spinner"
                    android:spinnerMode="dropdown" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Spacial Info "
                    android:id="@+id/textView6"
                    android:singleLine="true"
                    android:textColor="@android:color/background_dark"
                    style="@android:style/TextAppearance.DeviceDefault.Large" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_gravity="bottom"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/special_info_maintnance"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="40dp"
                    android:inputType="text"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center"
                    android:hint="Special info"
                    android:textColorHint="#030303" />

                <Button
                    android:id="@+id/submit_button_maintnance"
                    android:layout_width="185dp"
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center"
                    android:background="@android:color/holo_orange_light"
                    android:text="Submit"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>













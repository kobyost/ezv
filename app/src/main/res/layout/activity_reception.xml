<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.reception">

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
        android:background="@drawable/desk"
    android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Front Desk"
            android:textColor="@android:color/background_light"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/background_light"
            android:text="Contact us by phone "
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <Button
        android:id="@+id/button_phone"
        android:layout_width="match_parent"
        android:hint="Phone:086389999"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:onClick="callDesk"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
            android:textColorHint="#ffffff" />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Maintenance"
    android:layout_weight="1"
    android:gravity="left|center_vertical"
    android:id="@+id/maintenance_button"
        android:textColor="#ffffff"
        style="@android:style/TextAppearance.DeviceDefault.Large"
         />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request wifi password"
        android:gravity="left|center_vertical"
        android:id="@+id/wifi_button"
        android:textColor="#ffffff"
        style="@android:style/TextAppearance.DeviceDefault.Large" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Late check out"
        android:gravity="left|center_vertical"
        android:id="@+id/lateCheckOut_button"
        android:textColor="#ffffff"
        style="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clean room"
            android:gravity="left|center_vertical"
            android:id="@+id/cleanRoom_button"
            android:textColor="#ffffff"
            style="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wake up call"
            android:gravity="left|center_vertical"
            android:id="@+id/wakeUpcall_button"
            android:textColor="#ffffff"
            style="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call a taxi"
            android:gravity="left|center_vertical"
            android:id="@+id/callTaxi_button"
            android:textColor="#ffffff"
            style="@android:style/TextAppearance.Large" />




    </LinearLayout>



</LinearLayout>
